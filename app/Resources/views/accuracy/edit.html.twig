{% extends 'base.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}
{% form_theme edit_form _self %}

{% block body %}
    <h1>Accuracy edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

    <ul class="nav nav-pills">
        <li>
            <a href="{{ path('accuracy_index') }}">Back to the list</a>
        </li>
        <li>
            <input type="submit" value="Edit" />
            {{ form_end(edit_form) }}
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <button onclick="checkBox('checked')">checkedAll</button>
            <button onclick="checkBox('unchecked')">uncheckedAll</button>
        </li>
    </ul>
    <script>
        function checkBox(flag){
            var arrCheckBoxes;
            arrCheckBoxes = $('.checkbox input');
            if (flag == 'checked'){
                for (var i = 0; i < arrCheckBoxes.length; i++){
                    $(arrCheckBoxes[i]).prop('checked', 'checked');
                }
            } else {
                for (var i = 0; i < arrCheckBoxes.length; i++){
                    $(arrCheckBoxes[i]).prop('checked', '');
                }
            }
        }
    </script>
{% endblock %}
